rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Items images - authenticated users can upload, anyone can read
    match /items/{imageId} {
      // Anyone can read item images
      allow read: if true;
      
      // Only authenticated users can upload images
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // 5MB limit
        && request.resource.contentType.matches('image/.*');
      
      // Only authenticated users can delete (should be handled via Firestore)
      allow delete: if request.auth != null;
    }
    
    // User profile images
    match /profiles/{userId}/{imageId} {
      // Anyone can read profile images
      allow read: if true;
      
      // Users can only upload/update their own profile image
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 2 * 1024 * 1024  // 2MB limit
        && request.resource.contentType.matches('image/.*');
      
      // Users can only delete their own profile image
      allow delete: if request.auth != null
        && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

